{
  "manifest_version": 3,
  "name": "Travel & Accessibility OCR Companion",
  "version": "1.2",
  "description": "Extract text from images (OCR) and translate/summarize it using built-in AI APIs.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
